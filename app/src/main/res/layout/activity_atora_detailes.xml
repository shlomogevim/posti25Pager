<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainAtoraBackground"
    tools:context=".articles.AtoraDetailesActivity">

    <TextView
        android:id="@+id/title_atora_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a220_davidlibre_regular"
        android:paddingRight="10dp"
        android:paddingLeft="1dp"
        android:gravity="center"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_atora_article">
        <TextView
            android:id="@+id/tv_atora_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a220_davidlibre_regular"
            android:paddingRight="10dp"
            android:paddingLeft="1dp"
            android:gravity="right"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>